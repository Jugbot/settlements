{
  condition: {
    if: "is_tired",
    then: {
      sequence: [
        {
          selector: [
            {
              sequence: [
                "has(value=bed_position)",
                "bed_is_valid"
              ],
            },
            "claim_bed",
          ],
        },
        "set(key=target, value=bed_position",
        "go_to_target",
        "sleep",
      ],
    },
    else: {
      selector: ["is_not_sleeping", "stop_sleeping"],
    },
  },
}
